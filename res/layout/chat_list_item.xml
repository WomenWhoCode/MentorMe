<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="10dp" >
    <com.codepath.wwcmentorme.helpers.RoundedImageView
        android:id="@+id/ivMentorProfile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/ivMentorProfile" />
    <TextView
        android:id="@+id/tvMessage"
        style="@style/TextViewThin"
        android:layout_width="0dip"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Hey, was just wondering if you could help me out. I am stuck in this problem"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/tvTime"
        style="@style/TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5m"
        android:textSize="12sp" />
</LinearLayout>