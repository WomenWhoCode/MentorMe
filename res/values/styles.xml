<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:textViewStyle">@style/TextViewThin</item>
        <item name="android:editTextStyle">@style/EditText</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextViewThin" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    
    <style name="TextViewCapsule" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewCapsuleColor" parent="TextViewCapsule">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:background">@drawable/rounded_corner_color</item>
    </style>
    
    <style name="TextViewAvailability" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/textview_availability</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="ICButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/actionbar</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    
    <style name="UserRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>
    
    <dimen name="com_facebook_loginview_padding_left">12dip</dimen>
    <dimen name="com_facebook_loginview_padding_right">16dp</dimen>
    <dimen name="com_facebook_loginview_padding_top">12dp</dimen>
    <dimen name="com_facebook_loginview_padding_bottom">12dp</dimen>
    <dimen name="com_facebook_loginview_compound_drawable_padding">12dp</dimen>
    <color name="com_facebook_loginview_text_color">#ffffff</color>
    <dimen name="com_facebook_loginview_text_size">16sp</dimen>
    
    <style name="com_facebook_loginview_default_style" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/com_facebook_button_blue</item>
        <item name="android:textColor">@color/com_facebook_loginview_text_color</item>
        <item name="android:textSize">@dimen/com_facebook_loginview_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/com_facebook_loginview_padding_left</item>
        <item name="android:paddingRight">@dimen/com_facebook_loginview_padding_right</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/fb_login</item>
    </style>
    
    <style name="NextButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_next</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>