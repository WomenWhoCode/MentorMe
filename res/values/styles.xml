<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextView" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextViewThin" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    
    <style name="TextViewCapsule" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewCapsuleColor" parent="TextViewCapsule">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:background">@drawable/rounded_corner_color</item>
    </style>
    
    <style name="TextViewAvailability" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/textview_availability</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="ICButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/actionbar</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">4dp</item>
    </style>
    
    <style name="UserRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>
    
     <style name="AccountsBarButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>